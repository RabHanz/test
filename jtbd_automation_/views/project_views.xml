<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Form View Extension -->
    <record id="view_project_form_jtbd" model="ir.ui.view">
        <field name="name">project.project.form.jtbd</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Jobs-to-be-Done" name="jtbd">
                    <group>
                        <group string="Job Definition">
                            <field name="x_opportunity_id" />
                            <field name="x_job_category" />
                            <field name="x_job_statement" />
                            <field name="x_risk_level" />
                        </group>
                        <group string="Outcome Tracking">
                            <field name="x_outcome_target" />
                            <field name="x_outcome_metric" />
                            <field name="x_current_value" />
                            <field name="x_target_value" />
                            <field name="x_outcome_status" />
                        </group>
                        <group string="Resource Planning">
                            <field name="x_implementation_hours" />
                            <field name="x_support_hours" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Project Graph View -->
    <record id="view_project_graph_jtbd" model="ir.ui.view">
        <field name="name">project.project.graph.jtbd</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <graph string="JTBD Projects" type="bar">
                <field name="x_job_category" type="row" />
                <field name="progress" type="measure" />
                <field name="x_implementation_hours" type="measure" />
            </graph>
        </field>
    </record>

    <!-- Project Pivot View -->
    <record id="view_project_pivot_jtbd" model="ir.ui.view">
        <field name="name">project.project.pivot.jtbd</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <pivot string="JTBD Project Analysis">
                <field name="x_job_category" type="row" />
                <field name="x_outcome_status" type="col" />
                <field name="x_implementation_hours" type="measure" />
                <field name="progress" type="measure" />
            </pivot>
        </field>
    </record>

    <!-- Executive Graph View -->
    <record id="view_project_graph_executive" model="ir.ui.view">
        <field name="name">project.project.graph.executive</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <graph string="Outcome Achievement" type="bar" stacked="True">
                <field name="x_job_category" type="row" />
                <field name="x_outcome_status" type="row" />
                <field name="x_implementation_hours" type="measure" />
            </graph>
        </field>
    </record>

    <!-- Executive Pivot View -->
    <record id="view_project_pivot_executive" model="ir.ui.view">
        <field name="name">project.project.pivot.executive</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <pivot string="Portfolio Analysis">
                <field name="x_job_category" type="row" />
                <field name="x_outcome_status" type="col" />
                <field name="x_implementation_hours" type="measure" />
                <field name="partner_id" type="measure_count" />
            </pivot>
        </field>
    </record>
</odoo>