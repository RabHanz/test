<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- CRM Lead Form View Extension -->
    <record id="view_crm_lead_opportunity_form_jtbd" model="ir.ui.view">
        <field name="name">crm.lead.opportunity.form.jtbd</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Jobs-to-be-Done" name="jtbd">
                    <group>
                        <group string="Job Definition">
                            <field name="x_job_category" />
                            <field name="x_job_statement" />
                            <field name="x_current_solution" />
                            <field name="x_job_complexity" widget="rating" />
                            <field name="x_risk_level" />
                        </group>
                        <group string="Outcome Definition">
                            <field name="x_outcome_target" />
                            <field name="x_outcome_metric" />
                            <field name="x_current_value" />
                            <field name="x_target_value" />
                            <field name="x_outcome_status" />
                        </group>
                        <group string="Economic Impact">
                            <field name="x_economic_impact" />
                            <field name="x_mrr" />
                            <field name="x_contract_length" />
                            <field name="x_gross_margin" />
                            <field name="x_cac" />
                        </group>
                        <group string="Implementation Planning">
                            <field name="x_implementation_hours" />
                            <field name="x_support_hours" />
                            <field name="x_cltv" />
                            <field name="x_payback_period" />
                            <field name="x_jtbd_lead_score" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- CRM Lead Graph View -->
    <record id="view_crm_lead_graph_jtbd" model="ir.ui.view">
        <field name="name">crm.lead.graph.jtbd</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <graph string="JTBD Opportunities" type="bar">
                <field name="x_job_category" type="row" />
                <field name="x_implementation_hours" type="measure" />
                <field name="x_target_value" type="measure" />
                <field name="x_current_value" type="measure" />
            </graph>
        </field>
    </record>

    <!-- CRM Lead Pivot View -->
    <record id="view_crm_lead_pivot_jtbd" model="ir.ui.view">
        <field name="name">crm.lead.pivot.jtbd</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <pivot string="JTBD Analysis" display_quantity="true">
                <field name="x_job_category" type="row" />
                <field name="x_outcome_metric" type="col" />
                <field name="x_implementation_hours" type="measure" />
                <field name="x_mrr" type="measure" />
                <field name="x_target_value" type="measure" />
                <field name="x_current_value" type="measure" />
            </pivot>
        </field>
    </record>
</odoo>